<%= render("web/task/shared/header") %>

<div id="<%= dom_id(@task_list) %>">
  <h2>Task list #<%= @task_list.id %></h2>

  <div>
    <strong>Actions:</strong>
    <%= link_to("🗂️ View Items", task_list_items_path(@task_list) ) %>
    |
    <%= link_to_if(@task_list.normal?, "📝 Edit", edit_task_list_path(@task_list) ) %>
    |
    <%= link_to_if(@task_list.normal?, "🗑 Delete", task_list_path(@task_list), data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure you want to delete this task list?"
    }) %>
  </div>

  <table>
    <tbody>
      <tr>
        <th>Name:</th>
        <td style="width: 100%;"><%= @task_list.name %></td>
      </tr>
      <tr>
        <th>Description:</th>
        <td><%= @task_list.description %></td>
      </tr>
    </tbody>
  </table>

  <p>
    Back to <%= link_to("task lists", task_lists_path) %>
  </p>
</div>
